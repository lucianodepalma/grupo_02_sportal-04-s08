<%- include("./partials/head.ejs") %>
    <link href="/stylesheets/editarProducto.css" rel="stylesheet" />
    <title>Sportal - Portal para Guerreros Urbanos - Edición de Productos</title>
</head>

<body>
    <header>
        <div class="header-bar">
          <div class="header-circle"></div>
            <div class="header-title"><h3>Edición de Productos - ID: <%= prodList.id %></h3></div>
        </div>
    </header>
    <main>
        <div class="form-abm">
            <form action="/productos/editar/<%= prodList.id %>?_method=PUT" method="POST">
              
              <label class="labels label-marca" for="marca">Marca</label>
              <select class="selects marca-options" name="brand">
                <option value="#">Seleccione una opción</option>
                <% let keys = Object.keys(brands); %>
                <% let values = Object.values(brands); %>
                <% for (let i = 0 ; i < keys.length ; i++) { %>
                  <option value="<%= keys[i] %>" <%= (prodList.brand == keys[i]) ? "selected" : "" %>><%= values[i] %></option>
                <% } %>
              </select>

              <label class="labels label-rubro" for="marca">Rubro</label>
              <select class="selects rubro-options" name="heading" id="rubro">
                <option value="#" selected>Seleccione una opción</option>
                <% keys = Object.keys(headings); %>
                <% values = Object.values(headings); %>
                <% for (let i = 0 ; i < keys.length ; i++) { %>
                  <option value="<%= keys[i] %>" <%= (prodList.heading == keys[i]) ? "selected" : "" %>><%= values[i] %></option>
                <% } %>
              </select>

              <label class="labels label-modelo" for="modelo">Modelo</label>
              <input class="inputs input-modelo" type="text" name="model" id="modelo" value="<%= prodList.model %>">

              <label class="labels label-desc" for="descripcion">Descripción</label>
              <textarea class="inputs input-desc" type="text" name="desc" id="desc"><%= prodList.desc %></textarea>

              <label class="labels label-precio" for="precio">Precio</label>
              <input class="inputs input-precio" type="number" name="price" id="precio" value="<%= prodList.price %>">

              <label class="labels label-edad" for="edad">Edad</label>
              <select class="selects edad-options" name="age">
                <option value="#">Seleccione una opción</option>
                <% keys = Object.keys(ages); %>
                <% values = Object.values(ages); %>
                <% for (let i = 0 ; i < keys.length ; i++) { %>
                  <option value="<%= keys[i] %>" <%= (prodList.age == keys[i]) ? "selected" : "" %>><%= values[i] %></option>
                <% } %>
              </select>

              <label class="labels label-sexo" for="sexo">Sexo</label>
              <select class="selects sexo-options" name="sex">
                <option value="#">Seleccione una opción</option>
                <% keys = Object.keys(sex); %>
                <% values = Object.values(sex); %>
                <% for (let i = 0 ; i < keys.length ; i++) { %>
                  <option value="<%= keys[i] %>" <%= (prodList.sex == keys[i]) ? "selected" : "" %>><%= values[i] %></option>
                <% } %>
              </select>

              <label class="labels label-color" for="color">Color</label>
              <select class="selects color-options" name="color">
                <option value="#">Seleccione una opción</option>
                <% keys = Object.keys(colors); %>
                <% values = Object.values(colors); %>
                <% for (let i = 0 ; i < keys.length ; i++) { %>
                  <option value="<%= keys[i] %>" <%= (prodList.color == keys[i]) ? "selected" : "" %>><%= values[i] %></option>
                <% } %>
              </select>
              <div class="grid-image">
                <label class="labels label-icon" for="icon">Archivo de Marca (icono)<%= prodList.icon == "" ? "" : " (" + prodList.icon + ")" %></label>
                <input class="inputs input-icon" type="file" name="icon" id="icon" accept="<%= misc.imageExt %>" value="<%= prodList.icon %>">
                <img class="image-icon" src="<%= misc.pathLogos %><%= prodList.icon %>">

                <label class="labels label-image" for="image">Archivo de Imagen Principal<%= prodList.image == "" ? "" : " (" + prodList.image + ")" %></label>
                <input class="inputs input-image" type="file" name="image" id="image" accept="<%= misc.imageExt %>" value="<%= prodList.image %>">
                <img class="image-image" src="<%= misc.pathImages %><%= prodList.image %>">

                <label class="labels label-image1" for="image1">Archivo de Imagen Lateral Izquierda<%= prodList.leftImage == "" ? "" : " (" + prodList.leftImage + ")" %></label>
                <input class="inputs input-image1" type="file" name="leftImage" id="image1" accept="<%= misc.imageExt %>" value="<%= prodList.leftImage %>">
                <img class="image-image1" src="<%= misc.pathImages %><%= prodList.leftImage %>">

                <label class="labels label-image2" for="image2">Archivo de Imagen Lateral Derecha<%= prodList.rightImage == "" ? "" : " (" + prodList.rightImage + ")" %></label>
                <input class="inputs input-image2" type="file" name="rightImage" id="image2" accept="<%= misc.imageExt %>" value="<%= prodList.rightImage %>">
                <img class="image-image2" src="<%= misc.pathImages %><%= prodList.rightImage %>">

                <label class="labels label-image3" for="image3">Archivo de Imagen Superior<%= prodList.upperImage == "" ? "" : " (" + prodList.upperImage + ")" %></label>
                <input class="inputs input-image3" type="file" name="upperImage" id="image3" accept="<%= misc.imageExt %>" value="<%= prodList.upperImage %>">
                <img class="image-image3" src="<%= misc.pathImages %><%= prodList.upperImage %>">

                <label class="labels label-image4" for="image4">Archivo de Imagen Inferior<%= prodList.lowerImage == "" ? "" : " (" + prodList.lowerImage + ")" %></label>
                <input class="inputs input-image4" type="file" name="lowerImage" id="image4" accept="<%= misc.imageExt %>" value="<%= prodList.lowerImage %>">
                <img class="image-image4" src="<%= misc.pathImages %><%= prodList.lowerImage %>">
              </div>
              <div class="buttons">
                <button class="accept-button" type="submit">ACEPTAR</button>
                <button class="delete-button" type="submit" formaction="/productos/editar/<%= prodList.id %>?_method=DELETE">ELIMINAR</button>
              </div>
            </form>
        </div>
    </main>
</body>

</html>