<%- include("./partials/head.ejs") %>
    <link href="./stylesheets/login.css" rel="stylesheet"/>
    <title>Sportal - Portal para Guerreros Urbanos</title>
</head>
<body>
    <header>
        <div class="header-bar">
            <div class="header-circle"></div>
            <div class="header-title"><h3>Ingresa a tu cuenta</h3></div>
        </div>
    </header>
    <main>
        <div class="form-login">
            <form action="/login/access" method="POST">
                <div class="form-login-check">
                    <div class="form-login-check-bar">
                        <label for="usuario">e-mail<input class="input-login" type="email" name="usuario" id="usuario"></label>
                    </div>
                </div>

                <div class="form-login-check">
                    <div class="form-login-check-bar">
                        <label for="password">Contraseña<input class="input-login" type="password" name="password" id="password"></label>
                    </div>
                    <div class="form-login-check-restore">
                        <button class="restore-button" type="submit" formaction="/login/restore">No recuerdo mi contraseña</button>
                    </div>
                </div>

                <div class="login-buttons-login-button">
                    <button type="submit" class="login-button">INGRESAR</button>
                </div>
            </form>
            <div class="login-to-register">
                <label>Si no tenés un usuario ingresá tus datos aquí</label>
                <a href="/register" target="_self"><button class="register-button">REGISTRATE</button></a>
            </div>
        </div>
    </main>
</body>
</html>