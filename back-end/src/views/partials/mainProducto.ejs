<main id='main'>
    <div class='product-items'>
        <div class="product-images">
        <div class="product-image-angles">
            <img class="image" src="<%= misc.pathImages %><%= (producto.left_image) ? producto.left_image : misc.defaultImage %>">
            <img class="image" src="<%= misc.pathImages %><%= (producto.right_image) ? producto.right_image : misc.defaultImage %>">
            <img class="image" src="<%= misc.pathImages %><%= (producto.upper_image) ? producto.upper_image : misc.defaultImage %>">
            <img class="image" src="<%= misc.pathImages %><%= (producto.lower_image) ? producto.left_image : misc.defaultImage %>">
        </div> 
        <div class='principal-image'>
            <img class="image" src="<%= misc.pathImages %><%= (producto.image) ? producto.image : misc.defaultImage %>">
        </div>
        </div>
        <div class='product-description'>
            <div class='desc-title'>
                <img src="<%= misc.pathLogos %><%= (producto.brands.icon) ? producto.brands.icon : misc.defaultImage %>">
                <h3><%= producto.model %></h3>
                <div class="product-desc-price">$<%= producto.price %></div>
            </div>
            <div class="description-text"><%= producto.desc %></div>
            <form action="/#" method="GET" class="description-options">
                <div>
                    <label class="option-title" for="sexo">Sexo</label>
                    <input type="radio" class="hombre" name="sexo" id="sexo" value="M"><label for="sexo"> </label>
                    <input type="radio" class="mujer" name="sexo" id="sexo" value='F'><label for="sexo"> </label>
                </div>
                <div>
                    <label class="option-title" for='edad'>Edad</label>
                    <input type="radio" class="adulto" name="edad" id="edad" value="adulto"><label for="edad"> </label>
                    <input type="radio" class="nino" name="edad" id="edad" value="niño"><label for="edad"> </label>
                </div>
                <div>
                    <label class="option-title" for="color">Color</label>
                    <input type="radio" class="rojo" name="color" id="color" value="rojo"><label for="color"></label>
                    <input type="radio" class="azul" name="color" id="color" value="azul"><label for="color"> </label>
                    <input type="radio" class="amarillo" name="color" id="color" value="amarillo"><label for="color"> </label>
                    <input type="radio" class="verde" name="color" id="color" value="verde"><label for="color"> </label>
                </div>

                <div id="div-talle">
                    <label class="option-title" for="talle">Talle</label>
                    <input type="radio" class="XS" name="talle" id="talle" value="XS"><label for="talle"></label>
                    <input type="radio" class="S" name="talle" id="talle" value="S"><label for="talle"> </label>
                    <input type="radio" class="M" name="talle" id="talle" value="M"><label for="talle"> </label>
                    <input type="radio" class="L" name="talle" id="talle" value="L"><label for="talle"> </label>
                    <input type="radio" class="XL" name="talle" id="talle" value="XL"><label for="talle"> </label>
                    <input type="radio" class="XXL" name="talle" id="talle" value="XXL"><label for="talle"> </label>

                    <label id="label-size" class="option-title" for="select-size">Tamaño</label>
                    <select id="select-size" name="select-size">
                        <option value="00" selected>--</option>
                        <option value="35">35</option>
                        <option value="36">36</option>
                        <option value="37">37</option>
                        <option value="38">38</option>
                        <option value="39">39</option>
                        <option value="40">40</option>
                        <option value="41">41</option>
                        <option value="42">42</option>
                        <option value="43">43</option>
                        <option value="44">44</option>
                    </select>
                </div>
            </form>
            <div class='description-bottom'>
                <div id="desc-socials">
                    <i class="far fa-heart"></i>
                    <i class="fas fa-share-alt"></i>
                </div>
                <div class="desc-button">
                    <input id="select-quantity" type="number" min='1' max="30" value="1">
                    <a id="add-to-cart" href="/carrito"><i class="fas fa-check-circle"></i></a>
                    <a id="go-to-cart" href="/carrito">
                        <img id="cart" src="/images/icons/cart.png" >
                    </a>
                </div>
            </div>
        </div>
        <div class='similar-products'>
            <h3>Otros productos similares</h3>
            <div class='similar-products-1line'>
                <div class="image-left">
                    <% if (others[0]) { %>
                        <a href="/productos/detail/<%= others[0].id %>">
                            <img src="<%= misc.pathImages %><%= (others[0].image) ? others[0].image : misc.defaultImage %>">
                        </a>
                    <% } %>
                </div>
                <div>
                    <% if (others[1]) { %>
                        <a href="/productos/detail/<%= others[1].id %>">
                            <img src="<%= misc.pathImages %><%= (others[1].image) ? others[1].image : misc.defaultImage %>">
                        </a>
                    <% } %>
                </div>
            </div>
            <div class='similar-products-2line'>
                <div class="image-left">
                    <% if (others[2]) { %>
                        <a href="/productos/detail/<%= others[2].id %>">
                            <img src="<%= misc.pathImages %><%= (others[2].image) ? others[2].image : misc.defaultImage %>">
                        </a>
                    <% } %>
                </div>
                <div>
                    <% if (others[3]) { %>
                        <a href="/productos/detail/<%= others[3].id %>">
                            <img src="<%= misc.pathImages %><%= (others[3].image) ? others[3].image : misc.defaultImage %>">
                        </a>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    <script src="/js/producto.js"></script>
</main>